{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": ["error", { "printWidth": 100 }],
    "import/extensions": "off",
    "no-alert": "off",
    "class-methods-use-this": "off",
    "max-depth": ["error", 1],
    "max-lines-per-function": ["error", 15]
  },
  "ignorePatterns": ["cypress/*", "test/*"]
}
